        let socket = null;
        let isConnected = false;
        let qrModalClosedByConnection = false; // Flag para saber si el modal se cerr칩 por conexi칩n exitosa
        let currentUser = null;
        let token = null;
        let selectedFiles = [];
        
        // Cach칠 para rastrear chats que ya cargaron sus mensajes viejos
        let loadedChatsCache = new Set();
        let chatMessagesCache = new Map(); // Almacenar mensajes cargados por chat
        
        // Set para rastrear chats que ya mostraron la notificaci칩n de mensajes cargados
        let notificationShownChats = new Set();

        // Inicializaci涌쪑
        // Funci칩n para manejar cambios de tama침o de ventana
        function handleWindowResize() {
            const sidebar = document.getElementById('sidebar');
            const chatArea = document.getElementById('chat-area');
            const toggleBtn = document.getElementById('sidebar-toggle-btn');
            const icon = toggleBtn?.querySelector('i');

            // Limpiar clases m칩viles cuando se cambia a desktop
            if (window.innerWidth > 480) {
                sidebar?.classList.remove('mobile-open');
                chatArea?.classList.remove('mobile-active');
                removeMobileOverlay();
                
                // Restaurar estado normal en desktop
                if (window.innerWidth > 768) {
                    sidebar?.classList.remove('expanded');
                    toggleBtn?.classList.remove('slide-right');
