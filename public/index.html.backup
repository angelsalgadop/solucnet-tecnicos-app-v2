            if (endChatBtn) endChatBtn.addEventListener('click', endChat);
            if (adminVisitsBtn) adminVisitsBtn.addEventListener('click', openAdminPanel);
            if (sidebarToggleBtn) sidebarToggleBtn.addEventListener('click', toggleSidebar);
        }

