                sidebar.classList.toggle('mobile-open');
                
                if (sidebar.classList.contains('mobile-open')) {
                    icon.className = 'fas fa-arrow-left';
                    toggleBtn.title = 'Ocultar Panel';
                    // Ocultar 치rea de chat cuando se muestra sidebar en m칩vil
