        async function refreshQR() {
            try {
                // Actualizar indicador de estado a "generando"
                updateQRStatusIndicator('connecting', '<i class="fas fa-spinner fa-spin"></i> Generando nuevo c칩digo QR...');

                await fetch('/api/qr/refresh', { method: 'POST' });
                showNotification('Regenerando c칩digo QR...', 'info');

                // Verificar si WhatsApp est치 conectado antes de mostrar el QR
                setTimeout(async () => {
                    try {
                        const response = await fetch('/api/stats');
                        const data = await response.json();
                        const isWhatsAppReady = data.whatsappListo || data.connected || data.ready;

                        if (!isWhatsAppReady) {
                            // Actualizar indicador a "esperando conexi칩n"
                            updateQRStatusIndicator('connecting', '<i class="fas fa-spinner fa-spin"></i> Esperando conexi칩n de WhatsApp...');
