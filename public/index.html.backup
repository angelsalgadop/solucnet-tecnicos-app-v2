        // Funci칩n para generar IDs 칰nicos para mensajes
        function generateMessageId(msg, index) {
            if (msg.id) return msg.id;
            if (msg.timestamp) return `msg-${msg.timestamp}-${index}`;
            return `msg-${Date.now()}-${index}`;
